*
    padding 0
    margin 0
.container
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background-color #2C5C4A
    background-size 100% auto
    .page1
        width 100%
        height 100%
        display block
        #role
            width 1.973333rem
            height .853333rem
            background url(https://gw.alicdn.com/mt/TB1A2YJSpXXXXa5XVXXXXXXXXXX-147-63.png) no-repeat
            background-size 100% auto
            position absolute
            right .28rem
            top 0
            font-size 0
        .content
            position absolute!important
            top 50%
            width 10rem
            height 16.333333rem
            margin-top -8.026667rem
            background url(http://gw.alicdn.com/mt/TB1d0ZJSpXXXXclXXXXXXXXXXXX-750-1204.jpg) no-repeat        
            background-size 100% auto
        #start
            position absolute
            left 50%
            width 5.306667rem      
            height 1.6rem
            margin-left -2.653333rem
            bottom 6%
            background url(https://gw.alicdn.com/mt/TB1Zj6.SpXXXXagapXXXXXXXXXX-398-120.png) no-repeat        
            background-size 100% auto
    .page2
        width 100%
        height 100%
        position fixed
        left 0
        top 0
        bottom 0
        right 0
        background url(http://gw.alicdn.com/mt/TB1O_PTSpXXXXb5XpXXXXXXXXXX-750-1204.jpg) center center no-repeat
        background-size cover
        .mask
            position fixed 
            right 0
            left 0
            top 0
            bottom 0
            background rgba(0,0,0,0.6)
            z-index 10
        .countDown
            position absolute
            width 10rem
            height 10rem
            left 0
            top 1.666667rem
            background url(https://gw.alicdn.com/bao/uploaded/TB1eLC7SpXXXXcSaFXXXXXXXXXX-750-3750.png) 0 0 no-repeat
            background-size 100% auto
            z-index 11
            -webkit-animation countdown 5s steps(5) both
            @keyframes countdown {
            0% {
                background-position 0 0
                }
            100% {
                background-position: 0 -50rem;
                display: none
                }
            }
            @-moz-keyframes countdown {
                0% {
                    background-position: 0 0
                }
                100% {
                    background-position: 0 -50rem;
                    display: none
                }
            }
            @-webkit-keyframes countdown {
                0% {
                    background-position: 0 0
                }
                100% {
                    background-position: 0 -50rem;
                    display: none
                }
            }
            @-o-keyframes countdown {
                0% {
                    background-position: 0 0
                }
                100% {
                    background-position: 0 -50rem;
                    display: none
                }
            }
        .content
            background url(http://gw.alicdn.com/mt/TB1hRnzSpXXXXaraXXXXXXXXXXX-750-1204.png) 0 0 no-repeat
            background-size 100% auto
            position fixed            
            left 0
            right 0
            top 0.9rem
            bottom 0